<view class="form">
    <view class="weui-cells__title">请填写信息（公历）</view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
                <view class="weui-label">性别</view>
            </view>
            <view class="weui-cell__bd">
                <picker bindchange="bindSexChange" value="{{sexIndex}}" range="{{sex}}">
                    <view class="weui-select weui-select_in-select-after">{{sex[sexIndex]}}</view>
                </picker>
            </view>
        </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
                <view class="weui-label">年份</view>
            </view>
            <view class="weui-cell__bd">
                <picker bindchange="bindYearChange" value="{{yearIndex}}" range="{{year}}">
                    <view class="weui-select weui-select_in-select-after">{{year[yearIndex]}}</view>
                </picker>
            </view>
        </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
                <view class="weui-label">月份</view>
            </view>
            <view class="weui-cell__bd">
                <picker bindchange="bindMonthChange" value="{{monthIndex}}" range="{{month}}">
                    <view class="weui-select weui-select_in-select-after">
                        {{month[monthIndex]}}
                    </view>
                </picker>
            </view>
        </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
                <view class="weui-label">日</view>
            </view>
            <view class="weui-cell__bd">
                <picker bindchange="bindDayChange" value="{{dayIndex}}" range="{{day}}">
                    <view class="weui-select weui-select_in-select-after">{{day[dayIndex]}}</view>
                </picker>
            </view>
        </view>
    </view>
    <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_select">
            <view class="weui-cell__hd weui-cell__hd_in-select-after">
                <view class="weui-label">时间</view>
            </view>
            <view class="weui-cell__bd">
                <picker bindchange="bindTimeChange" value="{{timeIndex}}" range="{{time}}">
                    <view class="weui-select weui-select_in-select-after">{{time[timeIndex]}}</view>
                </picker>
            </view>
        </view>
    </view>
    <view class="weui-btn-area">
        <button class="weui-btn" type="primary" bindtap="taoButton">确定</button>
    </view>
    <view class="weui-btn-area">
        <view class="flex-ad">
            <ad unit-id="adunit-95dfddde0361e68c"></ad>
        </view>
    </view>
</view>